#!/bin/bash

source lib/import_all.sh

import_all "lib"
import_all "info"
import_all "src"

baker(){

    while [[ $# -gt 0 ]]
    do

        case "$1" in

            -v|--version)
                baker_version
                exit
            ;;

            -h|--help)
                baker_help
                exit
            ;;

            -l|--list)
                baker_list
                exit
            ;;

            --cake|cake)
                shift
                baker_cake "$@"
                exit
            ;;

            test)
                shift
                baker_test "$@"
                exit
            ;;

            *)
                baker_help
                exit
            ;;

        esac
    done

    baker_help
    exit

}

baker "$@"
